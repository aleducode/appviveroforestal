<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="46dp"
    android:paddingLeft="46dp"

    android:paddingRight="46dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/registroeventos">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/brote"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <Button
                android:fontFamily="sans-serif"
                android:id="@+id/tipoevento"
                style="@style/editText_style"
                android:inputType="textEmailAddress"
                android:hint="Seleccione Evento"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/fecha"
                android:layout_gravity="center_horizontal|center_vertical"
                />
            <Button
                android:fontFamily="sans-serif"
                android:id="@+id/fechaevento"
                style="@style/editText_style"
                android:inputType="textEmailAddress"
                android:hint="Seleccione Fecha"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/cantidad"
                android:layout_gravity="center_horizontal|center_vertical"
                />
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/menos"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/menos"
                    android:layout_gravity="center_horizontal|center_vertical"
                    />
                <TextView
                    android:id="@+id/cantidad"
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="75dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_weight="0.12" />
                <ImageView
                    android:id="@+id/mas"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mas"
                    android:layout_gravity="center_horizontal|center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/observacion"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <EditText
                android:fontFamily="sans-serif"
                android:id="@+id/editobservacion"
                style="@style/editText_style"
                android:inputType="textEmailAddress"
                android:hint="Especie1"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/ingresar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ingresar"
                android:layout_gravity="center_horizontal|center_vertical"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>